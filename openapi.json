{
  "openapi": "3.1.0",
  "info": {
    "title": "Jira → Slack MCP",
    "version": "1.0.0"
  },
  "paths": {
    "/api/jira/issues": {
      "get": {
        "summary": "Jira 이슈 조회",
        "operationId": "getJiraIssues",
        "parameters": [
          {
            "name": "assignee",
            "in": "query",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "status",
            "in": "query",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "조회된 Jira 이슈 목록",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "issues": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "key": { "type": "string" },
                          "summary": { "type": "string" },
                          "status": { "type": "string" },
                          "assignee": { "type": "string" }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/slack/send": {
      "post": {
        "summary": "슬랙 메시지 전송",
        "operationId": "sendSlackMessage",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "channel": { "type": "string" },
                  "message": { "type": "string" }
                },
                "required": ["channel", "message"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "전송 결과"
          }
        }
      }
    }
  }
}
