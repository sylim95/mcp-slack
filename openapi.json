{
  "openapi": "3.1.0",
  "info": {
    "title": "Slack MCP API",
    "version": "1.0.0"
  },
  "paths": {
    "/api/slack/send": {
      "post": {
        "operationId": "sendSlackMessage",
        "summary": "슬랙 채널에 메시지를 보냅니다.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "channel": {
                    "type": "string",
                    "example": "#general"
                  },
                  "message": {
                    "type": "string",
                    "example": "GPT가 보낸 메시지예요!"
                  }
                },
                "required": ["channel", "message"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "전송 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ok": { "type": "boolean" },
                    "ts": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}