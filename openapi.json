{
  "openapi": "3.1.0",
  "info": {
    "title": "Food Search + Slack Notifier",
    "version": "1.0.0"
  },
  "paths": {
    "/api/search/food": {
      "get": {
        "summary": "맛집 검색",
        "operationId": "searchFood",
        "parameters": [
          {
            "name": "query",
            "in": "query",
            "required": true,
            "description": "검색할 키워드 예: 강남역 맛집",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "검색 결과 반환",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "title": { "type": "string" },
                      "link": { "type": "string" },
                      "snippet": { "type": "string" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/slack/send": {
      "post": {
        "summary": "슬랙 채널로 메시지 전송",
        "operationId": "sendSlackMessage",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "channel": {
                    "type": "string",
                    "example": "#general"
                  },
                  "message": {
                    "type": "string",
                    "example": "강남역 맛집 추천 결과입니다!"
                  }
                },
                "required": ["channel", "message"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "전송 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ok": { "type": "boolean" },
                    "ts": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
