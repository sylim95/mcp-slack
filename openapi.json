{
  "openapi": "3.1.0",
  "info": {
    "title": "Jira to Slack MCP API",
    "version": "1.0.0"
  },
  "paths": {
    "/api/jira/issues": {
      "get": {
        "summary": "Jira 이슈 목록 조회",
        "parameters": [
          {
            "name": "summary",
            "in": "query",
            "required": false,
            "schema": { "type": "string" }
          },
          {
            "name": "assignee",
            "in": "query",
            "required": false,
            "schema": { "type": "string" }
          },
          {
            "name": "status",
            "in": "query",
            "required": false,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "이슈 목록 반환"
          }
        }
      }
    },
    "/api/jira/comments/summary": {
      "get": {
        "summary": "지라 이슈 댓글 요약 후 슬랙 전송",
        "parameters": [
          {
            "name": "key",
            "in": "query",
            "required": true,
            "description": "예: CATS-1234",
            "schema": { "type": "string" }
          },
          {
            "name": "channel",
            "in": "query",
            "required": true,
            "description": "슬랙 채널명 (예: #project-test)",
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "슬랙 메시지 전송 성공"
          }
        }
      }
    },
    "/api/slack/send": {
      "post": {
        "summary": "슬랙 메시지 전송",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "channel": { "type": "string" },
                  "message": { "type": "string" },
                  "imageUrl": { "type": "string" }
                },
                "required": ["channel", "message"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "전송 성공"
          }
        }
      }
    }
  }
}
